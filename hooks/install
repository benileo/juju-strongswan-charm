#!/usr/bin/env python3

import re

from charmhelpers.core import hookenv
from strongswan.constants import CONFIG
from strongswan.errors import InvalidSourceError
from strongswan.util import (
	cp_hosts_file, 
	flush_hosts_file, 
	cp_sysctl_file, 
	configure_sysctl
)
from strongswan.archive import (
	install_strongswan_archives,
	install_strongswan_version,
	install_strongswan_upstream,
	install_dep
)
install_dep() #install dependencies
import strongswan.iptables as iptables


def pre_install():
	"""
	@description:
	1. configure IPtables for IPsec 
	2. enable IP forwarding, make 
	3. copy sysctl.conf and hosts file for future reference
	"""
	cp_hosts_file()
	cp_sysctl_file()
	iptables.filter()
	iptables.nat()
	iptables.save()
	configure_sysctl()

	
def install():
	"""
	@description: Install Strongswan in 1 of 3 ways.
	1. From the ubuntu archives
	2. From upstream github repo
	3. From stable strongswan releaes
	"""
	source = CONFIG.get("source")
	if source == 'archives':
		install_strongswan_archives()

	elif source.upper() == 'LATEST' :
		install_strongswan_version('latest')

	elif re.match(r'^[1-9]{1}\.[0-9]{1,2}.[0-9]{1,2}', source )
		install_strongswan_version(source)

	elif re.match(r'^(http|https)://.*\.git$', source )
		install_strongswan_upstream(source)

	else:
		msg = (
			"You have specified an invalid install source:\n"
			"Valid Options are: \n"
			"1. archives (the default)\n"
			"2. latest\n"
			"3. A version number such as 5.1.1\n"
			"4. A git repository URL such as http://git.strongswan.org/strongswan.git"
		) 
		hookenv.log(msg)
		raise InvalidSourceError


def post_install():
	"""
	@description: Some post-install checks
	"""
	flush_hosts_file()



if __name__ == "__main__":
	pre_install()
	install()
	post_install()